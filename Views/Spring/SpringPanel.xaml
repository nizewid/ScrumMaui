<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumMaui.Views.Spring.SpringPanel"
             Title="Panel Spring">
    <VerticalStackLayout>

        <Label Text="Panel Spring" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="24" Margin="24" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="Nueva Tarea" x:Name="btnNewTask" Clicked="btnNewTask_Clicked"/>
            <Button Text="Nueva Incidencia" x:Name="btnNewIncidence" Clicked="btnNewIncidence_Clicked"/>
            <Button Text="Nuevo Usuario" x:Name="btnNewUser" Clicked="btnNewUser_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>