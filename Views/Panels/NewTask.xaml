<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumMaui.Views.Panels.NewTask"
             Title="Nueva Tarea">
    <VerticalStackLayout Margin="20">
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,0,0,20">
            <Label Text="Crear nueva Tarea" FontSize="24"></Label>
        </HorizontalStackLayout>

        <Label Text="Nombre Tarea"  />
        <Entry x:Name="txtTaskName"/>

        <Label Text="Tipo Tarea"  />
        <Entry x:Name="txtTaskType"/>

    </VerticalStackLayout>
</ContentPage>